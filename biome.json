{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "ignore": [
      "**/dist/**/*",
      "**/public/**/*",
      "**/build/**/*",
      ".yarn/**/*",
      "**/*.d.ts"
    ]
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "rules": {
      "recommended": true,
      "style": {
        "noNamespace": "error",
        "noNonNullAssertion": "warn"
      },
      "a11y": {
        "noSvgWithoutTitle": "warn",
        "useAltText": "warn",
        "useMediaCaption": "warn",
        "useKeyWithClickEvents": "warn",
        "noLabelWithoutControl": "warn"
      },
      "complexity": {
        "noForEach": "warn"
      },
      "correctness": {
        "useExhaustiveDependencies": "warn"
      },
      "suspicious": {
        "noArrayIndexKey": "warn",
        "noImplicitAnyLet": "warn",
        "noExplicitAny": "warn",
        "noAssignInExpressions": "warn"
      }
    },
    "ignore": [
      "**/dist/**/*",
      "**/public/**/*",
      "**/build/**/*",
      ".yarn/**/*",
      "**/*.d.ts"
    ]
  },
  "json": {
    "linter": {
      "enabled": true
    },
    "formatter": {
      "trailingCommas": "none"
    }
  },
  "overrides": [
    {
      "include": [
        "*.config.js",
        "*.config.cjs",
        "*.config.mjs",
        "*.config.ts",
        "*.d.ts"
      ],
      "linter": {
        "rules": {
          "style": {
            "noDefaultExport": "off"
          }
        }
      }
    }
  ],
  "css": {
    "formatter": {
      "enabled": true
    },
    "linter": {
      "enabled": true
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git"
  }
}
